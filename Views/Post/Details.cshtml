@model BookBlogProject.EntityLayer.ViewModels.PostVM
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Post Details</title>
</head>
<body>


    <form>
        <div class="form-group row">
            <div class="col-sm-1">
                @Html.Label("Book")
            </div>
            <div class="col-sm-7">
                @Html.TextBoxFor(x => x.BookName, new { @class = "form-control", @readonly = true })
            </div>
        </div>
        <br />
        <div class="form-group row">
            <div class="col-sm-1">
                @Html.Label("Category")
            </div>
            <div class="col-sm-7">
                @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control", @readonly = true })
            </div>
        </div>
        <br />
        <div class="form-group row">
            <div class="col-sm-1">
                @Html.Label("Title")
            </div>
            <div class="col-sm-7">
                @Html.TextBoxFor(x => x.PostTitle, new { @class = "form-control", @readonly = true })
            </div>
        </div>
        <br />
        <div class="form-group row">
            <div class="col-sm-1">
                @Html.Label("Content")
            </div>
            <div class="col-sm-7">
                @Html.TextAreaFor(x => x.PostContent, new { @class = "form-control", @readonly = true, rows = 10, columns = 40 })
            </div>
        </div>
        <br />
        <div class="form-group row">
            <div class="col-sm-1">
                @Html.Label("Public Date")
            </div>
            <div class="col-sm-7">
                @Html.TextBoxFor(x => x.PostDate, new { @class = "form-control", @readonly = true })
            </div>
        </div>
        <br />
        <div class="form-group row">
            <div class="col-sm-1">
                @Html.Label("Status")
            </div>
            <div class="col-sm-7">
                @Html.TextBoxFor(x => x.PostStatus, new { @class = "form-control", @readonly = true })
            </div>
        </div>
       


    </form>



</body>
</html>

