@model BookBlogProject.EntityLayer.Concrete.Author
@{
    ViewBag.Title = "AboutAuthor";
    Layout = "~/Views/Shared/_homeLayout.cshtml";
}

<html>

    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="title-bordered mb-5 d-flex align-items-center">
                    <h1 class="h4">@Model.AuthorName &nbsp; @Model.AuthorLastName</h1>
                    
                </div>
            </div>
            
            <div class="col-lg-12 col-md-12 content text-center text-md-left">
                <p>@Model.AuthorBiography</p>
               </div>
        </div>
    </div>

</html>

